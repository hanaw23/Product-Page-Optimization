{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@product-page-opt/*": ["./src/*"],
      "@product-page-opt/containers": ["./src/containers/index.tsx"],
      "@product-page-opt/constants": ["./src/constants/index.ts"],
      "@product-page-opt/components": ["./src/components/index.tsx"],
      "@product-page-opt/stores": ["./src/stores/index.ts"],
      "@product-page-opt/services": ["./src/services/*"],
      "@product-page-opt/icons": ["./src/icons/index.ts"],
      "@product-page-opt/utils": ["./src/utils/index.ts"],
      "@product-page-opt/context": ["./src/context/index.ts"],
      "@product-page-opt/hook": ["./src/hook/index.ts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
